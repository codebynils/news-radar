# https://editorconfig.org

root = true

# --- General defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --- Java & YAML (backend configs) ---
[*.{java,xml,yml,yaml}]
indent_size = 2
continuation_indent_size = 4

# --- Maven / POM ---
[pom.xml]
indent_size = 2

# --- JSON, JS, TS, TSX (React frontend) ---
[*.{js,jsx,ts,tsx,json}]
indent_size = 2
quote_type = single
max_line_length = 100

# --- Markdown & MDX ---
[*.md]
trim_trailing_whitespace = false

# --- Docker & Shell ---
[*.{sh,bash,Dockerfile}]
indent_size = 2

# --- Makefiles use tabs ---
[Makefile]
indent_style = tab

# --- Python helper scripts (if any) ---
[*.py]
indent_size = 4

# --- Ignore vendor / node_modules ---
[**/node_modules/**]
insert_final_newline = false
trim_trailing_whitespace = false

